# =============================================
# ZYN TRADE ROBOT - ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in the values
# =============================================

# Database Configuration (same as PHP website)
DB_HOST=localhost
DB_NAME=nrrskfvk_ZYNtradesystem
DB_USER=nrrskfvk_userZYNtradesystem
DB_PASS=your_password_here

# OlympTrade Credentials (for browser automation)
OLYMPTRADE_EMAIL=your_olymptrade_email
OLYMPTRADE_PASSWORD=your_olymptrade_password

# Robot Settings
ROBOT_MODE=production
# Options: production, demo, test

# Price Data Source
PRICE_DATA_SOURCE=tradingview
# Options: tradingview, yahoo, olymptrade

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Browser Settings
HEADLESS=true
# true = invisible browser, false = visible (for debugging)

# API Settings (for communication with PHP website)
API_BASE_URL=https://tester.situneo.my.id
API_SECRET_KEY=your_api_secret_key

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
