# =============================================
# ZYN TRADE ROBOT - ENVIRONMENT CONFIGURATION
# =============================================
# Copy this file to .env and update values

# =============================================
# OLYMPTRADE CREDENTIALS (For testing only)
# =============================================
OLYMPTRADE_EMAIL=your@email.com
OLYMPTRADE_PASSWORD=yourpassword

# =============================================
# BROWSER CONFIGURATION
# =============================================
# Path to Chromium browser (from playwright install)
PUPPETEER_EXECUTABLE_PATH=/root/.cache/ms-playwright/chromium-1200/chrome-linux64/chrome
HEADLESS=true

# =============================================
# API SERVER
# =============================================
API_PORT=3001
API_KEY=your-secret-api-key-change-this

# =============================================
# QUEUE CONFIGURATION (For 10,000+ traders)
# =============================================
# Maximum concurrent browser sessions
MAX_CONCURRENT=5

# Maximum trades per trader per hour
MAX_TRADES_PER_HOUR=20

# Cooldown between trades per trader (ms)
TRADER_COOLDOWN=30000

# =============================================
# DATABASE (MySQL)
# =============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=zyn_trade
DB_PASSWORD=your_db_password
DB_NAME=zyn_trade

# =============================================
# CAPTCHA SOLVING (Optional)
# =============================================
# 2Captcha API key for automatic captcha solving
# Get key at: https://2captcha.com
TWOCAPTCHA_API_KEY=

# =============================================
# ENCRYPTION
# =============================================
# Key for encrypting trader passwords in database
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=change-this-to-random-32-byte-hex

# =============================================
# LOGGING
# =============================================
LOG_LEVEL=info
LOG_FILE=logs/robot.log
ROBOT_MODE=production

# =============================================
# WEBSITE INTEGRATION
# =============================================
# URL of the PHP website API
WEBSITE_API_URL=https://your-website.com/api
WEBSITE_API_KEY=your-website-api-key
API_BASE_URL=https://tester.situneo.my.id
API_SECRET_KEY=your_api_secret_key

# =============================================
# NOTIFICATIONS (Optional)
# =============================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================
# PRODUCTION SETTINGS
# =============================================
NODE_ENV=production
