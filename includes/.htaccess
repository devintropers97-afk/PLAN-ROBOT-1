# Protect includes folder from direct access
# All files here should only be included by PHP, not accessed directly

# Deny all direct access
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

# Block specific file types
<FilesMatch "\.(php|inc|conf|cfg|ini|log|sh|sql)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>
